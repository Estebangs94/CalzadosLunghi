@page "id:int"
@model CalzadosLunghi.DetailsModel

@{
    ViewData["Title"] = "Details";
}

@if(Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<h1>Detalles</h1>

<div>
    <h4>Tipo de material</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMaterial.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoMaterial.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMaterial.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoMaterial.Codigo)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.TipoMaterial.ID">Editar</a> |
    <a asp-page="./Index">Volver a la lista</a>
</div>
