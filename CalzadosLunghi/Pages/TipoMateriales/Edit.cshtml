@page "id:int"
@model CalzadosLunghi.Pages.TipoMateriales.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Tipo de material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoMaterial.ID" />
            <div class="form-group">
                <label asp-for="TipoMaterial.Nombre" class="control-label"></label>
                <input asp-for="TipoMaterial.Nombre" class="form-control" />
                <span asp-validation-for="TipoMaterial.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMaterial.Codigo" class="control-label"></label>
                <input asp-for="TipoMaterial.Codigo" class="form-control" />
                <span asp-validation-for="TipoMaterial.Codigo" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
