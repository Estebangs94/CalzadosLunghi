@page
@model CalzadosLunghi.Pages.Zapatos.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Zapato works!</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @foreach (var item in Model.ListaParteZapatos)
            {
                if (item.FormadoPorMultipleMateriales)
                {

                }
                else
                {
                    <div class="form-group">
                        <label asp-for="MaterialSeleccionado.Nombre" class="control-label"></label>
                        <select class="form-control" asp-for="selectedMaterials"
                                asp-items="Model.MaterialesList">
                            <span class="text-danger" asp-validation-for="MaterialSeleccionado.ID"></span>

                        </select>
                    </div>
                }
            }

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}