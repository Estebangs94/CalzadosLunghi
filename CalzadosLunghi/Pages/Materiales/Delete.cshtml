@page "id:int"
@model CalzadosLunghi.Pages.Materiales.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Está seguro que desea eliminar el siguiente Tipo de Material?</h3>
<hr />

@if (Model.Delete != null)
{
    <div class="alert alert-danger">@Model.Delete</div>
}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Material.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Material.TipoMaterial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.TipoMaterial.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Material.UnidadDeMedida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.UnidadDeMedida)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Material.ID">Editar</a> |
    <a asp-page="./Index">Volver a la lista</a>
</div>
