@page
@model CalzadosLunghi.Pages.Materiales.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Crear material</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Material.Nombre" class="control-label"></label>
                <input asp-for="Material.Nombre" class="form-control" />
                <span asp-validation-for="Material.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.TipoMaterial" class="control-label"></label>
                <select class="form-control" asp-for="Material.TipoMaterial"
                        asp-items="Model.TipoDeMateriales">
                    <span class="text-danger" asp-validation-for="Material.UnidadDeMedida"></span>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="Material.UnidadDeMedida" class="control-label"></label>
                <select class="form-control" asp-for="Material.UnidadDeMedida"
                        asp-items="Model.UnidadDeMedida">
                    <span class="text-danger" asp-validation-for="Material.UnidadDeMedida"></span>

                </select>
            </div>


            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
